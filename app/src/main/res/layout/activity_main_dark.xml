<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/command_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="7"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="8"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="9"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_at"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="AT"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="4"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="5"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="6"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_thru"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="THRU"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="1"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="2"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="3"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_full"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="FULL"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="-%"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="0"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="+%"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="ZERO"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_please"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="17"
                android:background="@drawable/dark_button_please_state"
                android:onClick="onClick"
                android:text="PLEASE"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_period"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="."
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_by"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_number_state"
                android:onClick="onClick"
                android:text="BY"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="17"
                android:background="@drawable/dark_button_reset_state"
                android:onClick="onClick"
                android:text="DELETE"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="17"
                android:background="@drawable/dark_button_reset_state"
                android:onClick="onClick"
                android:text="RESET ALL"
                android:textColor="@color/button_color_white"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_setting_state"
                android:onClick="onClick"
                android:text="SET."
                android:textColor="@color/button_color_black"
                android:textSize="@dimen/settings_button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_setting_state"
                android:onClick="onClick"
                android:text="ADD"
                android:textColor="@color/button_color_black"
                android:textSize="@dimen/settings_button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_setting_state"
                android:onClick="onClick"
                android:text="DEL"
                android:textColor="@color/button_color_black"
                android:textSize="@dimen/settings_button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_setting_state"
                android:onClick="onClick"
                android:text="BACK"
                android:textColor="@color/button_color_black"
                android:textSize="@dimen/settings_button_text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/dark_button_setting_state"
                android:onClick="onClick"
                android:text="NEXT"
                android:textColor="@color/button_color_black"
                android:textSize="@dimen/settings_button_text_size" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>